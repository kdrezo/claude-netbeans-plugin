<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE filesystem PUBLIC "-//NetBeans//DTD Filesystem 1.2//EN"
                            "http://www.netbeans.org/dtds/filesystem-1_2.dtd">
<filesystem>
    <!-- Menu Window pour Claude Chat -->
    <folder name="Menu">
        <folder name="Window">
            <file name="ClaudeChatAction.shadow">
                <attr name="originalFile" stringvalue="Actions/Window/com-denis-claude-netbeans-OpenClaudeChatAction.instance"/>
                <attr name="position" intvalue="1500"/>
            </file>
        </folder>
    </folder>

    <!-- Actions -->
    <folder name="Actions">
        <folder name="Window">
            <file name="com-denis-claude-netbeans-OpenClaudeChatAction.instance">
                <attr name="instanceCreate" methodvalue="org.openide.awt.Actions.alwaysEnabled"/>
                <attr name="delegate" newvalue="com.denis.claude.netbeans.actions.OpenClaudeChatAction"/>
                <attr name="displayName" stringvalue="Claude Chat"/>
                <attr name="iconBase" stringvalue="com/denis/claude/netbeans/claude-icon.png"/>
            </file>
        </folder>
    </folder>

    <!-- TopComponent Registration -->
    <folder name="Windows2">
        <folder name="Components">
            <file name="ClaudeChatTopComponent.settings" url="ClaudeChatTopComponentSettings.xml"/>
        </folder>
        <folder name="Modes">
            <folder name="output">
                <file name="ClaudeChatTopComponent.wstcref" url="ClaudeChatTopComponentWstcref.xml"/>
            </folder>
        </folder>
    </folder>

    <!-- Options Panel - Using OptionsCategory -->
    <folder name="OptionsDialog">
        <file name="Claude.instance">
            <attr name="instanceCreate" methodvalue="com.denis.claude.netbeans.ui.ClaudeOptionsCategory.createCategory"/>
        </file>
    </folder>
</filesystem>
